<script>
    <% if flash[:error_msg]%>
    alert('<%=flash[:error_msg]%>');
    <% end%>
</script>
<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_journalisms_path %>">新闻管理</a> <span class="divider">/</span>
    </li>
    <li>
      新闻修改
    </li>
  </ul>
</div>
<div class="row-fluid sortable ui-sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title="">
      <h2><i class="icon-edit"></i> 新闻修改</h2>
    </div>
    <div class="box-content">
      <%= form_for @journalism, :url => admin_journalism_path, :method => "put", :html => {:id => "verifytitle", :class => "form-horizontal"} do |f| %>
          <legend>新闻修改</legend>\
          <%= f.label "新闻标题：" %>
          <%= f.text_field :title %>
          <br/>
          <%= image_tag @journalism.avatar.url(:thumb) %>
          <br/>
          <%= f.label "新闻内容：" %>
          <%= f.text_area :descrpiton, :style => "width:500px;height:150px" %>
          <div class="form-actions">
            <button type="submit" class="btn btn-primary">完成提交</button>
          </div>
      <% end %>
    </div>
  </div>
  <!--/span-->
</div>
<script src="/admin/js/jquery.validate.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $("#classic_cases").validate({
                rules: {
                    "case[title]": {
                        required: true
                    },
                    "case[descrption]": {
                        required: true
                    }
                },
                messages: {
                    "case[title]": {
                        required: "请填写标题"
                    },
                    "case[descrption]": {
                        required: "内容不能为空"
                    }
                },
                errorPlacement: function (error, element) {
                    error.appendTo(element.parent());
                }
            });
        });
    });
</script>